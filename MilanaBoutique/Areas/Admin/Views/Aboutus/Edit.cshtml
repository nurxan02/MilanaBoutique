@model AboutUs
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-3">
    <h1 class="text text-success">Edit settings</h1>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

    <form method="post" class="mt-2" enctype="multipart/form-data">
        <div class="mb-2">
            <div>
                <h2>CURRENT BANNER IMAGE :</h2>
                <img style="width:100px;" src="~/assets/images/@Model.Banner" />
            </div>
            <label asp-for="@Model.ImageFile" class="form-label">Banner image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
       
        <div class="mb-2">
            <label asp-for="@Model.NewsLink" class="form-label">News link</label>
            <input asp-for="@Model.NewsLink" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.NewsLink"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.SubTitle" class="form-label">SubTitle</label>
            <input asp-for="@Model.SubTitle" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.SubTitle"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Vision" class="form-label">Vision</label>
            <input asp-for="@Model.Vision" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Vision"></span>
        </div>

        <div class="mb-2">
            <label asp-for="@Model.Mission" class="form-label">InstaIcon</label>
            <input asp-for="@Model.Mission" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Mission"></span>
        </div>
     
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}

