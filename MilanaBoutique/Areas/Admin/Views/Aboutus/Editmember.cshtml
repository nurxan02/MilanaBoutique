@model Member
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-3">
    <h1 class="text text-success">Create member</h1>
    <div>
        <h1>Current member image :</h1>
        <img width="100" height="100"  src="~/assets/images/team/@Model.Image"/>
    </div>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post" class="mt-2" enctype="multipart/form-data">
        <div class="mb-2">
            <label asp-for="@Model.ImageFile" class="form-label">Member image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Firstname" class="form-label">Member Firstname</label>
            <input asp-for="@Model.Firstname" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Firstname"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Lastname" class="form-label">Member Lastname</label>
            <input asp-for="@Model.Lastname" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Lastname"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Info" class="form-label">Member Info</label>
            <input asp-for="@Model.Info" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Info"></span>
        </div>

        <div class="mb-2">
            <label asp-for="@Model.Speciality" class="form-label">Member speciality</label>
            <input asp-for="@Model.Speciality" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Speciality"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
