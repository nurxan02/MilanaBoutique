            <span class="mt-2 text text-danger" asp-validation-for="@Model.LittleWishlist"></span>
        </div>

        <div class="mb-2">
            <label asp-for="@Model.BasketIcon" class="form-label">BasketIcon</label>
            <input asp-for="@Model.BasketIcon" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.BasketIcon"></span>
        </div>






        <div class="mb-2">
            <label asp-for="@Model.FooterDesc" class="form-label">FooterDesc</label>
            <input asp-for="@Model.FooterDesc" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FooterDesc"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.UserIcon" class="form-label">UserIcon</label>
            <input asp-for="@Model.UserIcon" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.UserIcon"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.HomePageRefundIcon" class="form-label">HomePageRefundIcon</label>
            <input asp-for="@Model.HomePageRefundIcon" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.HomePageRefundIcon"></span>
        </div> <div class="mb-2">
            <label asp-for="@Model.HomePageDeliveryIcon" class="form-label">HomePageDeliveryIcon</label>
            <input asp-for="@Model.HomePageDeliveryIcon" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.HomePageDeliveryIcon"></span>
        </div> <div class="mb-2">
            <label asp-for="@Model.HomePageSupportIcon" class="form-label">HomePageSupportIcon</label>
            <input asp-for="@Model.HomePageSupportIcon" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.HomePageSupportIcon"></span>
        </div> <div class="mb-2">
            <label asp-for="@Model.HomePagePaymentIcon" class="form-label">HomePagePaymentIcon</label>
            <input asp-for="@Model.HomePagePaymentIcon" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.HomePagePaymentIcon"></span>
        </div>

        <div class="mb-2">
            <label asp-for="@Model.Copyright" class="form-label">Copyright</label>
            <input asp-for="@Model.Copyright" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Copyright"></span>
        </div>







        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

