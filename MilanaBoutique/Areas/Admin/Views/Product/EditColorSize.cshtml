@model ProductSizeColor

<div class="container mt-3">
    <h1 class="text text-success">Create product</h1>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post" class="mt-2" enctype="multipart/form-data">

        @*<h1>@Model.Product.Name</h1>
            <h1>@Model.Product.Id</h1>*@

        <div class="form-row col-12" id="social">
            <div class="form-group col-12" data-index="0">
                <label asp-for="@Model.SizeId">Size</label>
                <select asp-for="@Model.SizeId" class="form-select">
                    <option value="0">Select size</option>
                    @foreach (var item in ViewBag.Sizes)
                    {
                        <option value=@item.Id> @item.Name </option>
                    }
                </select>
                <span class="mt-2 text text-" asp-validation-for="@Model.SizeId"></span>


                <label asp-for="@Model.ColorId">Color</label>
                <select asp-for="@Model.ColorId" class="form-select">
                    <option value="0">Select color</option>
                    @foreach (var item in ViewBag.Colors)
                    {

                        <option value=@item.Id> @item.Name </option>
                    }
                </select>
                <span class="mt-2 text text-danger" asp-validation-for="@Model.ColorId"></span>
                <div class="mb-2">
                    <label asp-for="@Model.TotalStock" class="form-label">Totalstock</label>
                    <input asp-for="@Model.TotalStock" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.TotalStock"></span>
                </div>
                <div>
                    <h2>Current main image :</h2>
                    <img style="width:100px;height:100px" src="~/assets/images/products/@Model.MainImage" />

                </div>
                <div class="mb-2">
                    <label asp-for="@Model.MainImageFile" class="form-label">Main image</label>
                    <input asp-for="@Model.MainImageFile" accept="image/*" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.MainImageFile"></span>
                </div>
                <div>
                    <h2>Current images :</h2>
                    @foreach (var item in Model.ProductImages)
                    {<div>
                            <img style="width:100px;height:100px" src="~/assets/images/products/@item.Image" />
                            <i style="cursor:pointer" class="fa fa-window-close forme"></i>
                            <input hidden name="ImageIds" value="@item.Id" />
                        </div>

                    }


                </div>
                <div class="mb-2">
                    <label asp-for="@Model.ImageFiles" class="form-label">Other images</label>
                    <input asp-for="@Model.ImageFiles" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFiles"></span>
                </div>
                <input hidden asp-for="@Model.Product.Id" />





            </div>
        </div>






        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".forme").click(function () {
                $(this).parent().remove()

            })
        })
    </script>
    
