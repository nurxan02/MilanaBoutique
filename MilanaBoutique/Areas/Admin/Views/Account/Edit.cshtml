@model AdminEditVM
<div class="main-content">

    <div class="body-content">

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="fs-17 font-weight-600 mb-0">Edit Profile</h6>
                            </div>
                            <div class="text-right">
                                <div class="actions">
                                    <a href="#" class="action-item"><i class="ti-reload"></i></a>
                                    <div class="dropdown action-item" data-toggle="dropdown">
                                        <a href="#" class="action-item"><i class="ti-more-alt"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="#" class="dropdown-item">Refresh</a>
                                            <a href="#" class="dropdown-item">Manage Widgets</a>
                                            <a href="#" class="dropdown-item">Settings</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                        <form method="post">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-600">Username</label>
                                    <input class="form-control" asp-for="Username" />
                                    <span asp-validation-for="Username" class="text text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-600">Firstname</label>
                                    <input class="form-control" asp-for="Firstname">
                                    <span asp-validation-for="Firstname" class="text text-danger"></span>

                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-600">Last name</label>

                                    <input class="form-control" asp-for="Surname" />
                                    <span asp-validation-for="Surname" class="text text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-600">Email</label>
                                    <input class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email" class="text text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label>Current password (leave blank to leave unchanged)</label>
                                <input asp-for="CurrentPassword" class="form-control">
                                <span asp-validation-for="CurrentPassword" class="text text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>New password (leave blank to leave unchanged)</label>
                                <input asp-for="Password" class="form-control">
                                <span asp-validation-for="Password" class="text text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Confirm new password</label>
                                <input asp-for="ConfirmPassword" class="form-control mb-2">
                                <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>

                            </div>






                            <div class="card-footer">
                                <button type="submit" class="btn btn-fill btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>
