@model AccountVM

<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('../assets/images/backgrounds/login-bg.jpg')">
    <div class="container">
        <div class="form-box">
            <div class="form-tab">
                <ul class="nav nav-pills nav-fill" role="tablist">
                    <li class="nav-item ">
                        <a class="nav-link active" style="pointer-events:none" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="false">Reset password</a>
                    </li>

                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
                        <div style="color: red; background-color: white;" asp-validation-summary="ModelOnly"></div>
                        <form method="post">
                            <input  asp-for="Password" class="form-control" placeholder="Password">
                            <span class="text text-danger" asp-validation-for="Password"></span>


                            <div style="display:none">
                                <input asp-for="Token" class="form-control" />
                                <input asp-for="AppUser.Email" class="form-control" />
                            </div>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password">
                            <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>




                            <div class="form-footer">
                                <button type="submit" class="btn btn-outline-primary-2">
                                    <span>RESET</span>
                                    <i class="icon-long-arrow-right"></i>
                                </button>



                            </div>


                        </form>

                    </div>

                </div><!-- End .tab-content -->
            </div><!-- End .form-tab -->
        </div><!-- End .form-box -->
    </div><!-- End .container -->
</div><!-- End .login-page section-bg -->
